<h3 class="u__mb__20">
  Upcoming matches
  {{#if filterPlayer}} <b>for {{filterPlayer}}</b>{{/if}}
  {{#if matchesFilteredByPlayer.length}}({{matchesFilteredByPlayer.length}}){{/if}}
</h3>

<div class="layout__box o__has-rows u__mb__20">
  {{#each matchesFilteredByPlayer as |match|}}
    {{upcoming-match
      match=match
    }}
  {{/each}}
</div>

{{#if initialMatchFetch.isRunning}}
  <div class="layout__box o__flexes-to-1 o__centers-horizontally">
    <div class="t__centered">
      <div class="loader"></div>
      <div class="t__small-caps u__mt__10">Loading fixtures</div>
    </div>
  </div>
{{/if}}