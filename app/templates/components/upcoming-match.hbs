<div class="layout__box o__has-columns o__flexes-to-1">
  <div class="layout__box o__has-rows fixture-team">
    <img class="fixture-flag" src="https://raw.githubusercontent.com/nolaneo/wc2018/master/public/assets/images/flags/{{dasherize (lowercase match.home_team.country)}}.png"/>
    <h3 class="t__centered" style="margin-bottom: 0">{{match.home_team.country}}</h3>
    <h4 class="t__centered">{{match.home_team.player_name}}</h4>
  </div>

  <div class="layout__box o__centers-all o__flexes-to-1">
    {{#if (eq filtering "in progress")}}
      <div class="t__centered">
        <h2 class="score">{{match.home_team.goals}} â€“ {{match.away_team.goals}}</h2>
        <div class="layout__box o__has-columns">
          <h3>{{match.time}}</h3>
          <div class="ring-container">
            <div class="ringring"></div>
            <div class="circle"></div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="t__centered">
        <h2>V</h2>
        <h3>{{moment-from-now match.datetime}}</h3>
        <p class="subtext">({{moment-format (moment match.datetime) 'MMM DD - HH:SS'}})</p>
      </div>
    {{/if}}

  </div>

  <div class="layout__box o__has-rows fixture-team">
    <img class="fixture-flag" src="https://raw.githubusercontent.com/nolaneo/wc2018/master/public/assets/images/flags/{{dasherize (lowercase match.away_team.country)}}.png"/>
    <h3 class="t__centered" style="margin-bottom: 0">{{match.away_team.country}}</h3>
    <h4 class="t__centered">{{match.away_team.player_name}}</h4>
  </div>
</div>
<hr>