<div class="layout__box o__has-columns o__flexes-to-1">
  <div class="layout__box o__has-rows fixture-team">
    <img class="fixture-flag" src="https://raw.githubusercontent.com/nolaneo/wc2018/master/public/assets/images/flags/{{dasherize fixture.homeTeam}}.png"/>
    <h3 class="t__centered" style="margin-bottom: 0">{{fixture.homeTeam}}</h3>
    <h4 class="t__centered">{{fixture.homePlayer}}</h4>
  </div>

  <div class="layout__box o__centers-all o__flexes-to-1">
    <div class="t__centered">
      <h2>V</h2>
      <h3>{{moment-from-now fixture.time}}</h3>
      <p class="subtext">({{moment-format (moment fixture.time) 'MMM DD - HH:SS'}})</p>
    </div>

  </div>

  <div class="layout__box o__has-rows fixture-team">
    <img class="fixture-flag" src="https://raw.githubusercontent.com/nolaneo/wc2018/master/public/assets/images/flags/{{dasherize fixture.awayTeam}}.png"/>
    <h3 class="t__centered" style="margin-bottom: 0">{{fixture.awayTeam}}</h3>
    <h4 class="t__centered">{{fixture.awayPlayer}}</h4>
  </div>
</div>
<hr>