<h3 class="u__mb__20 layout__box o__flexes-to-1 u__hover" {{action 'toggle'}}>
  Completed matches <span class="{{if isOpen 'chevron top' 'chevron bottom'}}" style="opacity: 0.3; margin-top: 10px;"></span> 
</h3>

{{#if isOpen}}
  <div class="layout__box o__has-rows u__mb__20">
    {{#each matchesFilteredByPlayer as |match|}}
      {{past-match
        match=match
      }}
    {{/each}}
  </div>

  {{#if initialMatchFetch.isRunning}}
    <div class="layout__box o__flexes-to-1 o__centers-horizontally">
      <div class="t__centered">
        <div class="loader"></div>
        <div class="t__small-caps u__mt__10">Loading fixture</div>
      </div>
    </div>
  {{/if}}
{{/if}}